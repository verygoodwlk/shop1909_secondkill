    <script type="text/javascript">

        $(function(){
            //手动设置按钮的点击时间
            $("#tixingBtn").click(tixing);

            var gid = ${goods.id};

            //获取cookie
            var result = getCookie("tixing_" + gid);
            if(result){
                //提醒过了
                $("#tixingBtn").html("取消提醒");
                $("#tixingBtn").attr("alt", 1);
            } else {
                //还未提醒
                $("#tixingBtn").html("提醒我");
                $("#tixingBtn").attr("alt", 0);
            }
        });

        /**
         * 提醒/取消提醒
         */
        function tixing(){

            var flag = $("#tixingBtn").attr("alt");

            //获取商品id
            var gid = ${goods.id};

            if(flag == 0){
                //保存当前添加提醒的商品id到浏览器cookie
                setCookie("tixing_" + gid, true);

                //修改页面按钮
                $("#tixingBtn").html("取消提醒");
                $("#tixingBtn").attr("alt", 1);
                flag = 1;
            } else {

                //删除cookie
                delCookie("tixing_" + gid);

                //修改页面按钮
                $("#tixingBtn").html("提醒我");
                $("#tixingBtn").attr("alt", 0);
                flag = 0;
            }

            //ajax通知后台进行商品提醒
            $.ajax({
                url:"/kill/tixing",
                data: {"gid":gid, "flag":flag},
                success: function(data){
                    if(data.code == "200"){
                        alert("秒杀消息提醒" + (flag == 1 ? "设置" : "取消") + "成功！");
                    }
                }
            });
        }

        function setCookie(name,value)
        {
            var Days = 30;
            var exp = new Date();
            exp.setTime(exp.getTime() + Days*24*60*60*1000);
            document.cookie = name + "="+ escape (value) + ";expires=" + exp.toGMTString();
        }

        //读取cookies
        function getCookie(name)
        {
            var arr,reg=new RegExp("(^| )"+name+"=([^;]*)(;|$)");
            if(arr=document.cookie.match(reg))
                return unescape(arr[2]);
            else
                return null;
        }

        //删除cookies
        function delCookie(name)
        {
            var exp = new Date();
            exp.setTime(exp.getTime() - 1);
            var cval=getCookie(name);
            if(cval!=null)
                document.cookie= name + "="+cval+";expires="+exp.toGMTString();
        }

        /**
         * 立即抢购
         */
        function goBtn(){
            //设置按钮的点击时间
            $("#gobtn").click(function(){

                //弹框 - 输入验证码
                $("#code_dialog").dialog({
                    title:"请输入验证码",
                    width: 200,
                    height: 160,
                    modal: true
                });

            });

            //开放按钮
            $("#gobtn").removeAttr("disabled");
            $("#gobtn").html("立即抢购");
        }

        //商品开始抢购的时间
        var startTime = new Date('${goods.goodsKill.startTime?datetime}');

        //当前时间
        var now;

        //计数器
        var count = 0;

        //定时器对象
        var mytime;

        /**
         * 倒计时功能
         */
        function djs(){
            //计算时间差
            var times = startTime.getTime() - now.getTime();

            if(times <= 0){
                //秒杀已经开始了
                // alert("秒杀开始了！");
                goBtn();
                return;
            }

            //秒杀还未开始，计算倒计时
            var h = parseInt(times/1000/60/60);//还剩多少小时
            var m = parseInt(times/1000/60%60);//还剩多少分钟
            var s = parseInt(times/1000%60);//还剩多少秒
            var ms = parseInt(times%1000);//还剩多少毫秒 867


            var djsTime = formatTime(h) + ":" + formatTime(m) + ":" + formatTime(s);
            $("#djs").html(djsTime);

            mytime = setTimeout(function(){

                if(count >= 60){
                    console.log("主动获取服务器的时间！");
                    //重新获取服务器的时间
                    getServerNow();
                    count = 0;
                } else {
                    now.setSeconds(now.getSeconds() + 1);
                    now.setMilliseconds(now.getMilliseconds() + ms);
                    count++;
                }

                djs();

            }, 1000 + ms);
        }

        /**
         * 获得服务器的当前时间
         */
        function getServerNow(){
            $.ajax({
                type: "GET",
                url: "/kill/queryNow",
                async: false,//设置为同步的ajax
                success: function(data){
                    if(data.code == "200"){
                        now = new Date(data.data);
                    }
                }
            });
        }

        /**
         * 格式化当前时间
         */
        function formatTime(n){
            if(n < 10){
                return "0" + n;
            }
            return n;
        }

        /**
         * 页面加载后触发
         */
        $(function(){
            //获取当前时间
            getServerNow();

            //开始倒计时
            djs();
        });

        /**
         * 监听到浏览器的隐藏和显示时间
         */
        document.addEventListener('visibilitychange',function(){ //浏览器切换事件
            if(document.visibilityState=='hidden') { //状态判断
                //console.log("隐藏了！！");

                //停止定时器
                clearTimeout(mytime);
            }else {
                //console.log("可见了！！");
                //获取当前时间
                getServerNow();
                //开始倒计时
                djs();
            }
        });

        //更新验证码
        function update_code(img){
            img.src = "/kill/code?t=" + new Date().getTime();
        }

        //抢购下单
        function xiadan(){
            var code = $("#mycode").val();
            location.href = "/kill/qiangGou?gid=${goods.id}&code=" + code;
        }
    </script>


